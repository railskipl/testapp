<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag  "internal", "jquery.fancybox-1.3.4", "modalbox"%>
    <%= javascript_include_tag "jquery-1.4.3.min.js","jquery-1.5.2.min.js","jquery.fancybox-1.3.4.pack.js","prototype","effects","rails","builder","modalbox" %>
    <script type="text/javascript">
    		jQuery(document).ready(function() {

    			jQuery("#various1").fancybox({
    				'titlePosition'		: 'inside',
    				'transitionIn'		: 'none',
    				'transitionOut'		: 'none'
    			});

    						jQuery("#various2").fancybox({
    				'titlePosition'		: 'inside',
    				'transitionIn'		: 'none',
    				'transitionOut'		: 'none'
    			});

    					});
    	</script>
    <%= csrf_meta_tags %>
  </head>
  <body>
  	<div align="center" id="maindiv">
    <div id="wraper">
      <div id = "header">
        
        <div id="header_right"> 
	 <div class="topmenu">
		 <ul>
		 	<% if user_signed_in? %>
		 	 <li>
		 	 	
		 	 </li>
		 	 <% else %>
		 	 	<li>
		 	 		<a id="various1" href="#inline1" title="">Register</a>
		 	 		
		 	 	</li>
		 	 <% end %>
		 	 
		 	 <% if user_signed_in? %>
			 <li>
			 	<%= button_to "Logout", destroy_user_session_path, :method => :delete, :class => "signup_button" %>
        
			 </li>
			 <% else %>
		 	 <li>
		 	 	<a id="various2" href="#inline2" title="">Login</a>
		 	 </li>
		 	 <% end %>
		 </ul>
	 </div>
</div>
        
      </div>
    <div align="center" id="middle">
    <h2><%= render 'layouts/messages' %></h2>
    
      <%= yield %>
	
	
		<div style="display:none">
		
		<div id="inline1" style="width:400px; height:auto; overflow:auto; text-align:left">
<div>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<table width="100%" border="0" cellspacing="5" cellpadding="5">
  <tr>
    <td align="left" valign="middle"><strong>First Name</strong></td>
    <td align="center" valign="middle">:</td>
    <td><%= f.text_field :name %></td>
  </tr>
  
  <tr>
<td align="left" valign="middle"><strong>Email</strong></td>
    <td align="center" valign="middle">:</td>
    <td><%= f.email_field :email %></td>
  </tr>
  <tr>
<td align="left" valign="middle"><strong>Password</strong></td>
    <td align="center" valign="middle">:</td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td align="left" valign="middle"><strong>Confirm Password</strong></td>
    <td align="center" valign="middle">:</td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
  
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td><%= f.submit "Sign up", :class => "signup_button" %> </td>
  </tr>
</table>
<% end %>


</div>
		</div>
		
</div>








<div style="display:none">
		
		<div id="inline2" style="width:400px; height:auto; overflow:auto; text-align:left">
<div>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<table width="100%" border="0" cellspacing="5" cellpadding="5">
	
  <tr>
    <td align="left" valign="middle"><strong>Email</strong></td>
    <td align="center" valign="middle">:</td>
    <td><%= f.email_field :email %></td>
  </tr>
  <tr>
<td align="left" valign="middle"><strong>Password</strong></td>
    <td align="center" valign="middle">:</td>
    <td><%= f.password_field :password %></td>
  </tr>
  
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td><%= f.submit "Sign in", :class => "signup_button" %></td>
  </tr>
  
</table>
<% end %>


</div>
		</div>
		
</div>
   
 </div>
        
      
      <footer>
      </footer>
    </div> <!--! end of #wraper -->
    </div>
  </body>
</html>
